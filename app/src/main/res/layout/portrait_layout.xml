<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="0"
        android:layout_weight="0"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7
"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"/>
            <Button
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="0"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="/>
    </LinearLayout>

</LinearLayout>